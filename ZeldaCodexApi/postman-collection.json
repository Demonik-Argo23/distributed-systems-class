      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Postman Master Sword\",\n    \"weaponType\": \"ONE_HANDED_SWORD\",\n    \"damage\": 50,\n    \"durability\": 200,\n    \"element\": \"LIGHT\"\n}"
        },
        "url": {
          "raw": "http://localhost:8082/api/v1/weapons",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8082",
          "path": [
            "api",
            "v1",
            "weapons"
          ]
        }
      }
    },
